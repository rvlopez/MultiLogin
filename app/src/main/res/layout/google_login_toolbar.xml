<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_toolbar"
    android:minHeight="?attr/actionBarSize"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/LoginToolbar">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/option_icon"
        android:transitionName="option_icon"
        android:layout_width="@dimen/circle_image_width"
        android:layout_height="@dimen/circle_image_height"
        android:layout_gravity="center"
        android:layout_weight="2"
        app:civ_border_width="@dimen/circle_image_border_width"
        app:civ_border_color="@color/black"
        android:src="@drawable/google"/>

</android.support.v7.widget.Toolbar>